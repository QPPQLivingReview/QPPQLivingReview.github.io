@article{liuEfficientQuantumAlgorithm2020,
  title = {Efficient Quantum Algorithm for Dissipative Nonlinear Differential Equations},
  author = {Liu, Jin-Peng and Kolden, Herman {\O}ie and Krovi, Hari K. and Loureiro, Nuno F. and Trivisa, Konstantina and Childs, Andrew M.},
